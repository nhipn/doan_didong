<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1450A3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:background="@drawable/baseline_arrow_back_24"
            android:backgroundTint="#F4AAAA" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingVertical="12dp"
            android:text="Setting"
            android:textAlignment="viewStart"
            android:textColor="#fff"
            android:textSize="30dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1450A3"
        android:padding="10dp"
        android:text="total"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textV2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1450A3"
        android:padding="10dp"
        android:text="total"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textV3"
        app:layout_constraintTop_toBottomOf="@+id/textV1"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textV3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1450A3"
        android:padding="10dp"
        android:text="total"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textV4"
        app:layout_constraintTop_toBottomOf="@+id/textV2"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textV4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1450A3"
        android:padding="10dp"
        android:text="total"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/grid"
        app:layout_constraintTop_toBottomOf="@+id/textV3"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="-16dp" />


    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textV4"
        app:layout_constraintVertical_bias="0.5">

        <ImageButton
            android:id="@+id/btn_color1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/magin_color"
            android:layout_marginRight="@dimen/magin_color"
            android:layout_marginBottom="@dimen/magin_bot_color"
            android:backgroundTint="#00B14F"
            android:background="@drawable/btn_radius"/>

        <ImageButton
            android:id="@+id/btn_color2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/magin_color"
            android:layout_marginRight="@dimen/magin_color"
            android:backgroundTint="#FF3838"
            android:background="@drawable/btn_radius"/>

        <ImageButton
            android:id="@+id/btn_color3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/magin_color"
            android:layout_marginRight="@dimen/magin_color"
            android:backgroundTint="#F4CE14"
            android:background="@drawable/btn_radius"/>

        <ImageButton
            android:id="@+id/btn_color4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/magin_color"
            android:layout_marginBottom="@dimen/magin_bot_color"
            android:backgroundTint="#7158E2"
            android:background="@drawable/btn_radius"/>

        <ImageButton
            android:id="@+id/btn_color5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/magin_color"
            android:backgroundTint="#1450A3"
            android:background="@drawable/btn_radius"/>

        <ImageButton
            android:id="@+id/btn_color6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/magin_color"
            android:backgroundTint="#17C0EB"
            android:background="@drawable/btn_radius"/>

        <ImageButton
            android:id="@+id/btn_color7"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/magin_color"
            android:backgroundTint="#FF1FA2"
            android:background="@drawable/btn_radius"/>

        <ImageButton
            android:id="@+id/btn_color8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/magin_color"
            android:backgroundTint="#008170"
            android:background="@drawable/btn_radius"/>

        <ImageButton
            android:id="@+id/btn_color9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/magin_color"
            android:backgroundTint="#3D3D3D"
            android:background="@drawable/btn_radius"/>
    </GridLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>